<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#023644"
        tools:context="com.ui.main.view.fragments.LetsStartFragment">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_splash_illustration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.187" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textColor="#DFC805"
            android:textSize="33dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Capture photos and videos with IOS camera"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/letsStartBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#C5B005"
            android:text="Let's Start"
            android:textColor="@android:color/white"
            android:textSize="23dp"
            android:textStyle="bold"
            app:button_cornerRadius="27dp"
            app:button_duration="250"
            app:button_scale="0.87"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDescription"
            app:layout_constraintVertical_bias="0.283" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>